pipeline {
    agent any

    tools {
        nodejs "NodeJS_18"
    }

    environment {
        IMAGE = "hk00d/my-weatherapp"
        TAG = "${BUILD_NUMBER}"
        KUBECONFIG = credentials('kubeconfig')
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/hrithik-k0/Weather-app.git',
                    credentialsId: 'github-creds'
                sh 'ls -R'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        // ðŸŸ¢ FIX: Permissions BEFORE lint/build
        stage('Fix ESLint Permissions') {
            steps {
                sh 'chmod -R 755 node_modules/.bin'
            }
        }

        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }

        stage('Docker Build & Push') {
            steps {
                sh '''
                  docker build -t $IMAGE:$TAG .
                  echo $DOCKERHUB_PASSWORD | docker login -u $DOCKERHUB_USERNAME --password-stdin
                  docker push $IMAGE:$TAG
                '''
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                sh '''
                  export KUBECONFIG=$KUBECONFIG
                  helm upgrade --install my-weatherapp ./helm-chart \
                    --namespace my-weatherapp --create-namespace \
                    --set image.repository=$IMAGE \
                    --set image.tag=$TAG \
                    --wait --timeout 5m
                '''
            }
        }

        stage('Post-Deploy Validation') {
            steps {
                sh '''
                  export KUBECONFIG=$KUBECONFIG
                  kubectl get pods -n my-weatherapp
                  kubectl get svc -n my-weatherapp
                '''
            }
        }
    }
}